SetMessageExact("Sawrunner is here...", 0.0f);
float baseX = GetPlayerPosX();
float baseY = GetPlayerPosY();
float baseZ = GetPlayerPosZ();
if(GetEntityExists("StreamnesiaSawrunner"))
{{
    SetEntityActive("StreamnesiaSawRunner", true);
}}
else
{{
    CreateEntityAtFirstArea("StreamnesiaSawRunner", "sawrunner.ent", true);
}}

SetEntityPos("StreamnesiaSawRunner", baseX + 2.0f, baseY, baseZ);
